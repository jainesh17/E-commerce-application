<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/_5ssp"
    app:cardElevation="@dimen/_3ssp"
    android:layout_marginHorizontal="@dimen/_10ssp"
    android:layout_marginVertical="@dimen/_5ssp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:gravity="center"
        android:padding="@dimen/_10ssp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/custom_product_list_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:padding="@dimen/_20ssp"
            />

        <LinearLayout
            android:layout_marginLeft="@dimen/_10ssp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             android:orientation="vertical">

        <TextView
            android:layout_marginTop="@dimen/_10ssp"
            android:id="@+id/custom_product_list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/bold_14_text"/>

        <TextView
            android:id="@+id/custom_product_list_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/bold_12_text"
            />


        </LinearLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>