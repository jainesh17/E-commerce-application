<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OrignalInternship" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="bold_20_text" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/_20ssp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>
  <style name="bold_16_text" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <style name="bold_14_text" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <style name="bold_12_text" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <style name="bold_20_edit" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="background">@drawable/custom_border</item>
        <item name="android:padding">@dimen/_7ssp</item>
    </style>

        <style name="bold_20_button" parent="Widget.AppCompat.Button">
            <item name="android:textColor">@color/white</item>
            <item name="fontFamily">@font/lato_bold</item>
            <item name="android:textSize">@dimen/_15ssp</item>
            <item name="backgroundTint">@null</item>
            <item name="android:background">@drawable/custom_button</item>
        </style>

    <style name="bold_20_radio_button" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textSize">@dimen/_20ssp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:buttonTint">@color/white</item>
    </style>

    <style name="bold_20_spinner" parent="Widget.AppCompat.Spinner">
        <item name="android:textSize">@dimen/_80ssp</item>
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:background">@drawable/custom_border</item>
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>
</resources>